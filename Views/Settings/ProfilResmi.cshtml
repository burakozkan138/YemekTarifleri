@model YemekTarifleri.ViewModels.ProfilResimViewModel
@{
    ViewBag.Title = "Profil Resmi Düzenle";
}


<div class="container d-flex justify-content-center my-auto">
    <div class="card col-md-8 col-lg-6 mt-3">
        <div class="card-header">
            <h3 class="card-title text-center text-dark">Profil Resmi Düzenle</h3>
        </div>
        <div class="card-body">
            @using (@Html.BeginForm("ProfilResmi", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form>
                    @if (Model.Resim != "Default.jpg")
                    {
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Resim, new { @class = "form-check-label mb-1" })
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@Model.Resim</span>
                                    <img src="@Url.Content(String.Format("~/Content/ProfilPhotos/{0}", Model.Resim))" class="d-block" alt="" height="60" />
                                    @Html.ActionLink("X", "ProfilResmiDelete", "Settings", null, new { @class = "btn btn-xs btn-danger" })
                                </li>
                            </ul>
                        </div>
                    }
                    <div class="mb-3">
                        @Html.LabelFor(m => m.files, new { @class = "form-check-label mb-1" })
                        @Html.TextBoxFor(m => m.files, "", new { @type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.files, null, new { @class = "text-danger" })
                    </div>
                    <div class="d-flex justify-content-around">
                        @Html.ActionLink("Geri Dön", "Index", "Settings", null, new { @class = "btn btn-primary w-25" })
                        <button type="submit" class="btn btn-success w-50">Güncelle</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>


